@model IEnumerable<CodyMVC5HomeWork1.Models.客戶資料>

@{
    ViewBag.Title = "客戶資料";
}

<h2>客戶資料</h2>

@using (Html.BeginForm())
{
    <table class="table">
        <tr>
            <td>
                @Html.TextBox("KeyWord", ViewData["KeyWord"], new { newSort= ViewBag.SortBy,  oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc,keyWord= ViewData["KeyWord"], category = ViewData["Category"] })
                @Html.DropDownList("客戶分類",null,"請選擇", new { newSort = ViewBag.SortBy, oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"] , category = ViewData["Category"] })
                <input type="submit" value="Search" class="btn btn-default" />
                </td>
        </tr>
    </table>
}
<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("匯出所有資料", "Export")
</p>
<table class="table">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.客戶名稱)*@
            @Html.ActionLink("客戶名稱", "Index", new { newSort = "客戶名稱",oldSort=ViewBag.SortBy, sortDesc= ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.統一編號)*@
            @Html.ActionLink("統一編號", "Index", new { newSort = "統一編號", oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.電話)*@
            @Html.ActionLink("電話", "Index", new { newSort = "電話", oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.傳真)*@
            @Html.ActionLink("傳真", "Index", new { newSort = "傳真", oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.地址)*@
            @Html.ActionLink("地址", "Index", new { newSort = "地址", oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Email)*@
            @Html.ActionLink("Email", "Index", new { newSort = "Email", oldSort = ViewBag.SortBy, sortDesc = ViewBag.SortDesc, keyWord = ViewData["KeyWord"], category = ViewData["Category"] })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.統一編號)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.傳真)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.地址)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
